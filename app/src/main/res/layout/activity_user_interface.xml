<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserInterface">

    <View
            android:background="@drawable/image_wallpaper"
            android:layout_width="403dp"
            android:layout_height="203dp"
            android:id="@+id/view_top" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.485"/>
    <ImageView
            android:layout_width="146dp"
            android:layout_height="144dp" app:srcCompat="@drawable/image_profile"
            android:background="@drawable/image_profile_shape"
            android:id="@+id/imageView_profile" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/view_top" app:layout_constraintStart_toStartOf="@+id/view_top"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/view_top"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="@+id/view_top"
            android:layout_marginBottom="8dp"/>
    <ScrollView
            android:layout_width="392dp"
            android:layout_height="337dp"
            app:layout_constraintTop_toBottomOf="@+id/view_top" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/scrollView_content">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/str_description"
                    android:layout_width="355dp"
                    android:layout_height="68dp"
                    android:ems="10"
                    android:id="@+id/textView_description"
                    android:visibility="invisible"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.619"/>
            <Switch
                    android:text="@string/str_hideDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showDescription"
                    android:id="@+id/switch_hide" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_description"
                    app:layout_constraintHorizontal_bias="0.972"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="189dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_description"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                    app:layout_constraintEnd_toStartOf="@+id/switch_hide" android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    android:id="@+id/textInputLayout_name" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="@string/str_name"
                        android:ems="10"
                        android:id="@+id/editText_name" tools:layout_editor_absoluteX="3dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="161dp"
                    android:layout_height="62dp"
                    android:id="@+id/textInputLayout_firstSurname"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout_name"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="0.0">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="@string/str_firstSurname"
                        android:ems="10"
                        android:id="@+id/editText_firstSurname" tools:layout_editor_absoluteX="3dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="161dp"
                    android:layout_height="62dp"
                    android:id="@+id/textInputLayout_postalCode"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout_firstSurname"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/str_postalCode"
                        android:ems="10"
                        android:id="@+id/editText_postalCode" tools:layout_editor_absoluteX="3dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="161dp"
                    android:layout_height="57dp"
                    android:id="@+id/textInputLayout_city"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout_postalCode"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="0.0">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/str_city"
                        android:ems="10"
                        android:id="@+id/editText_city" tools:layout_editor_absoluteX="3dp"/>
            </android.support.design.widget.TextInputLayout>

            <Button

                    android:layout_width="217dp"
                    android:layout_height="56dp"
                    android:text="@string/str_hide"

                    android:id="@+id/btn_hide"

                    android:onClick="showPopUp"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:layout_marginTop="168dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout_secondSurname"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="161dp"
                    android:layout_height="68dp"
                    android:id="@+id/textInputLayout_secondSurname"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textInputLayout_firstSurname"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout_name"
                    app:layout_constraintHorizontal_bias="0.636" android:layout_marginTop="8dp">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="@string/str_secondSurname"
                        android:ems="10"
                        android:id="@+id/editText_secondSurname" tools:layout_editor_absoluteX="3dp"/>
            </android.support.design.widget.TextInputLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
